generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String               @id
  email                 String?              @unique
  kakaoId              String               @unique @map("kakao_id")
  createdAt            DateTime             @default(now())
  userName             String
  refreshToken         String?
  selectedPersonalityId String?              @default("MUNI")
  conversations        Conversation[]
  customAIPersonalities CustomAIPersonality[]
  emotionLogs          EmotionLog[]

  @@map("users")
}

model Conversation {
  id            String   @id
  userId        String
  content       String
  createdAt     DateTime @default(now())
  role          String
  personalityId String?
  user          User     @relation(fields: [userId], references: [id])

  @@map("conversations")
}

model CustomAIPersonality {
  id           String   @id
  userId       String
  name         String
  mbtiTypes    Json
  systemPrompt String
  description  String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  user         User     @relation(fields: [userId], references: [id])

  @@map("custom_ai_personalities")
}

model EmotionLog {
  id            String   @id
  userId        String
  date          DateTime @db.Date
  summary       String
  emotion       String
  createdAt     DateTime @default(now())
  characterName String?
  shortSummary  String?
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("emotion_logs")
}
